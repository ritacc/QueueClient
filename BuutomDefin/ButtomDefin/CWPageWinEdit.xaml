        <TextBox Height="23" HorizontalAlignment="Left" Margin="80,14,0,0" Name="txtName" VerticalAlignment="Top" Width="157" />
        <sdk:Label Height="19" HorizontalAlignment="Left" Margin="45,56,0,0" Name="label2" VerticalAlignment="Top" Width="27" Content="长：" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="80,52,0,0" Name="txtWidth" VerticalAlignment="Top" Width="84" />
        <sdk:Label Height="28" HorizontalAlignment="Left" Margin="45,93,0,0" Name="label3" VerticalAlignment="Top" Width="27" Content="宽：" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="80,89,0,0" Name="txtHeight" VerticalAlignment="Top" Width="84" />
    </Grid>
</controls:ChildWindow>