<Window x:Class="QClient.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        Title="页窗口" Height="300" Width="300"
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize" Topmost="True" ShowInTaskbar="False"
                   Style="{StaticResource ChromeWindowStyle}">
    <Window.Background>
        <ImageBrush ImageSource="./Resources/Images/background.jpg"/>
    </Window.Background>

    <Border>
        <Canvas
            x:Name="MainCanvas"/>
    </Border>
</Window >
