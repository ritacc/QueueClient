    <Grid 
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>                
                <RowDefinition Height="22"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Column="0"  Grid.Row="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Text="延后时间：" Foreground="White" />
        <DockPanel Margin="5"   Grid.Row="0"   Grid.Column="1">
            <TextBox x:Name="txtDelay" VerticalAlignment="Center"
                HorizontalAlignment="Left" Width="120" ></TextBox>
            <TextBlock Text="分钟"  VerticalAlignment="Center"></TextBlock>
        </DockPanel>
        
        <TextBlock
                x:Name="MessageTextBlock"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Foreground="Red"
                VerticalAlignment="Center"
                Margin="5"
                Width="200"
                TextTrimming="CharacterEllipsis"
                HorizontalAlignment="Left"/>
           
        <Button
                x:Name="OKButton"
                Grid.Row="3"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="5,5,90,5"
                Height="23"
                Width="65"
                Click="OKButton_Click"
                IsDefault="True" Content="确定" />

            <Button
                x:Name="CancelButton"
                Grid.Row="3"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="90,5,5,5"
                Height="23"
                Width="65"
                IsCancel="True" Content="取消" />
        </Grid>
 
</Window>
