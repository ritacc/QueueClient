<metro:MetroWindow x:Class="QSoft.View.SysSetWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
    Title="系统设置" Height="240" Width="350"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    ShowMaxRestoreButton="False"
    ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="../Resources/Images/background.jpg"/>
    </Window.Background>
    <Window.Resources>
        <DataTemplate x:Key="myTaskTemplate">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="c# " Width="80" Background="Red"/>
                <TextBlock Text="Java " Width="80" />
                <TextBlock Text="VB " Width="80" />
                <TextBlock Text="C++ " Width="80" />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>


    <Grid>
        <ListBox Width="400" Margin="10" Background="LightBlue"
         ItemTemplate="{StaticResource myTaskTemplate}" >
            <StackPanel>
            </StackPanel>
        </ListBox>
    </Grid>
</metro:MetroWindow>
